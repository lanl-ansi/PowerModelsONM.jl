  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/outputs",
  "type": "object",
  "title": "Outputs",
  "x-tags": [
    "output"
  ],
  "description": "Main output schema for PowerModelsONM",
  "additionalProperties": false,
  "properties": {
    "Simulation time steps": {
      "type": "array",
      "items": {
        "type": [
          "string",
          "number"
        ],
        "format": "date-time"
      }
    },
    "Load served": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Feeder load (%)": {
          "type": "array",
          "items": {
            "type": "number",
            "format": "float"
          }
        },
        "Microgrid load (%)": {
          "type": "array",
          "items": {
            "type": "number",
            "format": "float"
          }
        },
        "Bonus load via microgrid (%)": {
          "type": "array",
          "items": {
            "type": "number",
            "format": "float"
          }
        }
      }
    },
    "Generator profiles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Grid mix (kW)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "Solar DG (kW)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "Energy storage (kW)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "Diesel DG (kW)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      }
    },
    "Voltages": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "Min voltage (p.u.)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "Mean voltage (p.u.)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "Max voltage (p.u.)": {
          "type": "array",
          "items": {
            "type": "number"
          }
        }
      }
    },
    "Storage SOC (%)": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "Device action timeline": {
      "$ref": "./device_action_timeline.schema.json"
    },
    "Powerflow output": {
      "$ref": "./powerflow.schema.json"
    },
    "Additional statistics": {
      "$ref": "./additional_statistics.schema.json"
    },
    "Events": {
      "$ref": "./events.schema.json"
    },
    "Runtime arguments": {
      "$ref": "./runtime_arguments.schema.json"
    },
    "Fault currents": {
      "$ref": "./fault_currents.schema.json"
    },
    "Small signal stable": {
      "type": "array",
      "items": {
        "type": "boolean"
      }
    },
    "Runtime timestamp": {
      "type": "string",
      "description": "Time at which ONM algorithm was executed",
      "format": "date-time"
    },
    "Switch changes": {
      "type": "array",
      "description": "List of switches whose state changed between timesteps",
      "items": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}