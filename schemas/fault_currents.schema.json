  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schemas/fault_currents",
  "title": "Fault currents",
  "type": "array",
  "x-tags": [
    "output"
  ],
  "examples": [
    [
      {}
    ]
  ],
  "description": "Collection of data about fault currents collected from the outputs of fault studies using PowerModelsProtection",
  "items": {
    "type": "object",
    "description": "fault studies results",
    "patternProperties": {
      "^.+_[3p|3pg|llg|ll|lg]_\\d+": {
        "type": "object",
        "description": "busName_faultType_faultID",
        "properties": {
          "fault": {
            "type": "object",
            "properties": {
              "bus": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": [
                  "3p",
                  "3pg",
                  "ll",
                  "lg",
                  "llg"
                ]
              },
              "conductance (S)": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              },
              "susceptance (S)": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              },
              "connections": {
                "type": "array",
                "items": {
                  "type": "integer"
                }
              }
            }
          },
          "switch": {
            "type": "object",
            "patternProperties": {
              "^.+$": {
                "type": "object",
                "properties": {
                  "|I| (A)": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  },
                  "|V| (V)": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  },
                  "Re(I0) (A)": {
                    "type": "number"
                  },
                  "Re(I1) (A)": {
                    "type": "number"
                  },
                  "Re(I2) (A)": {
                    "type": "number"
                  },
                  "Im(I0) (A)": {
                    "type": "number"
                  },
                  "Im(I1) (A)": {
                    "type": "number"
                  },
                  "Im(I2) (A)": {
                    "type": "number"
                  },
                  "|I0| (A)": {
                    "type": "number"
                  },
                  "|I1| (A)": {
                    "type": "number"
                  },
                  "|I2| (A)": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}