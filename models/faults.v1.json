                },
                "g": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  }
                },
                "b": {
                  "type": "array",
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  }
                },
                "fault_type": {
                  "type": "string",
                  "enum": [
                    "3p",
                    "3pg",
                    "ll",
                    "llg",
                    "lg"
                  ]
                },
                "status": {
                  "type": "string",
